@font-face {
  font-family: "Nauman Regular";
  src: url("<%= asset_path('Nauman-Regular.otf') %>") format("truetype");
}

.container-fluid {
  width: 100%;
  font-family: "Nauman Regular", sans-serif;
}

.form-control {
  width: 100%;
}

h1 {
  color: #FFF;
}

body {
  background: url(http://nyc.wpengine.netdna-cdn.com/wp-content/uploads/2013/02/DSC_0916.jpg) no-repeat center center fixed;
  background-size: cover;
}

.navbar.navbar-default.navbar-fixed-top {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.left-side {
  background-color: rgba(0,0,0,.75);
  padding-top: 10px;
  padding-bottom: 40px;
}

.left-side.price-queries {
  background-color: rgba(0,0,0,.75);
  padding-bottom: 30px;
  height: 7%;
  min-width: 260px;
}

.navbar {
  font-size: 20px;
  background-color: black;
  /*background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#302D2D), to(#575757), color-stop(0,#171717));*/
  height: 60px;
  border-style: none; 
} 

#navli {
  color: #72c9b3;
  font-family: "Nauman Regular", sans-serif;
  font-size: 18px;
  /*color: #fefefe;*/
}

.nav.navbar-nav.navbar-right{
  margin-right: 20px;
}

#clockbox {
  color: white;
  font-family: 'Nauman-Regular', sans-serif;
  margin-bottom: 20px;
}

.col-md-8.center.about{
  background-color: rgba(0,0,0,.75);
  color: white;

}

.profile-form{
  margin-top: 30px;
  background-color: rgba(0,0,0,.75);
  color: #FFF;
  height: relative;
  padding: 6px 10px 25px 20px;
  text-align: center;
}

.form-control.btn.btn-primary{
  /*width: 100px;*/
  background-color: #72c9b3;
  border: none;
  color: black;
  text-align: center;
}

.form-control.btn.btn-primary:hover{
  background: #3f8c78 ;
}

.btn.btn-default {
  width: 150px;
  
  background-color: #72c9b3;
  border: none;
}

.btn.btn-default:hover {
  background-color: #3f8c78;

}

.btn.btn-small {
  background-color: #72c9b3;
  border: none;
  color: white;
}
.btn.btn-small:hover {
  background-color: #3f8c78;

}
.btn.btn-primary {
  border: none;
  color: black;
}

.btn.btn-danger {
  border: none;
  color: black;
}

#price_queries-h2 {
  text-align: center;
  margin-top: 40px;
  color:white;
}

#signup-h2{
  text-align: center;
  margin-top: 40px;
  color:white;
}

#edit-profile-h2 {
  text-align: center;
  margin-top: 40px;
  color:white;
}

.signup-form {
  background-color: rgba(0,0,0,.75);
  color: white;
  padding: 1em 3em;
  height: 500px;
  margin: 0 4% auto;
  min-width: 200px;

  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;

}

.edit-profile-form {
  background-color: rgba(0,0,0,.75);
  color: white;
  padding: 1em 3em;
  height: 500px;
  margin: 0 auto;
  min-width: 200px

  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;

}

.price-queries-form {
  background-color: rgba(0,0,0,.75);
  color: white;
  padding: 1em 3em;
  height: 300px;
  margin: 0 auto;
  min-width: 200px
  
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;

}

#login-h1 {
  text-align: center;
  margin-top: 40px;
}

.col-md-6.registered-users {
  background-color: rgba(0,0,0,.75);
  color: white;
  padding: 30px;
  height: 400px;
}

.col-md-6.new-users {
  background-color: rgba(0,0,0,.75);
  color: white;
  padding: 30px;
  height: 400px;
  border-left: 1px solid white;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

/*general styles for site*/

h4, p {
  color: #FFF;
}

.right-side {
  text-align: center;
}

/*styles for homepage*/

.options {
  margin-bottom: 20px;
}

.no-data {
  display: none;
  background-color: rgba(0,0,0,.75);
  color: #FFF;
  font-size: 2em;
  width: 50%;
  margin: 0 auto;
  text-align: center;
  margin-top: 20%;
  padding: 20px;
}

/*styles for places show page*/

#saved-place {
  padding-bottom: 10px;
}

#saved-place p {
  color: #FFF;
}

#saved-place h3 {
  color: #FFF;
  margin-top: 50px;
}

#saved-place form {
  margin-top: 20px;
}

#saved-place iframe {
  width: 100%;
  height: 250px;
  border: 0;
  margin-top: 60px;
}

/*styles for login page*/

#sign-up-btn {
  margin-top: 30px;
}

/*styles for chart*/

canvas {
  width: 100% !important;
  max-width: 800px;
  height: auto !important;
  margin-top: 40px;
  padding: 40px;
}
