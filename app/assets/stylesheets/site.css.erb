@font-face {
        font-family: "Nauman Regular";
        src: url("<%= asset_path('Nauman-Regular.otf') %>") format("truetype");
}

.container {
  width: 1400px;
  font-family: "Nauman Regular", sans-serif;
}

.header a {
  margin-right: 10px;
}

.contributors {
  border-top: 1px solid white;
  margin-top: 30px;
}

.contributors h3 {
  margin-bottom: 15px;
}

.contributors tr {
  height: 130px;
}

.contributor-img {
  width: 100px;
  border-radius: 50px;
  margin-right: 10px;
}

.dropdown-toggle {
  width: 300px;
  text-align: left;
}

.form-control {
  width: 300px;
}

h1 {
  color: white;

}

body {
  background-image: url(http://nyc.wpengine.netdna-cdn.com/wp-content/uploads/2013/02/DSC_0916.jpg);
  background-size: cover;
  background-position: fixed;
}

.navbar.navbar-default.navbar-fixed-top {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.left-side {
  background-color: rgba(0,0,0,.75);
  height: 600px;
  width: 350px;
}

.navbar {
  font-size: 20px;
  background-color: black;
  /*background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#302D2D), to(#575757), color-stop(0,#171717));*/
  height: 60px;
  border-style: none; 
} 

#navli {
  color: #72c9b3;

  font-size: 18px;
  /*color: #fefefe;*/
}

.nav.navbar-nav.navbar-right{
  margin-right: 20px;
}

#clockbox {
  color: white;
  font-family: 'Nauman-Regular', sans-serif;
  margin-bottom: 20px;
}

.col-md-8.center.about{
  background-color: rgba(0,0,0,.75);
  color: white;

}

.col-md-8.center.profile{
  margin-top: 30px;
  background-color: rgba(0,0,0,.75);
  color: white;
  height: relative;
  padding-bottom: 25px;
  text-align: center;

}

.form-control.btn.btn-primary{
  width: 100px;
  background-color: #72c9b3;
  border: none;
}

.btn.btn-default {
  width: 150px;
  background-color: #72c9b3;
  border: none;
}

.btn.btn-small {
  background-color: #72c9b3;
  border: none;
  color: white;
}

.btn.btn-primary {
  border: none;
}

.btn.btn-danger {
  border: none;
}

#signup-h2{
  text-align: center;
  margin-top: 40px;
  color:white;
}

.signup-form {
  background-color: rgba(0,0,0,.75);
  color: white;
  padding-left: 14%;
  padding-top: 25px;
  height: 500px;
  margin-left: 170px;
  margin-right: 170px;

  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;

}


#login-h1 {
  text-align: center;
  margin-top: 40px;
}

.col-md-6.registered-users {
  background-color: rgba(0,0,0,.75);
  color: white;
  padding: 30px;
  height: 400px;
}

.col-md-6.new-users {
  background-color: rgba(0,0,0,.75);
  color: white;
  padding: 30px;
  height: 400px;
  border-left: 1px solid white;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.options {
  margin-bottom: 20px;
}









