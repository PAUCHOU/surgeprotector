<h1>Login</h1>

<%= form_for :user do |f|  %>
	<div class="form-group">
	    <%= f.label :email %>:
	    <%= f.email_field :email , class: "form-control"%>
	</div>
	<div class="form-group">
	    <%= f.label :password %>:
	    <%= f.password_field :password , class: "form-control"%>
	</div>
	<div class="form-group">
		<%= f.submit "Login", class: "form-control btn btn-primary"  %>
	</div>
<% end %>