<div class="col-md-3 left-side">

  <% flash.each do |k, v| %>
    <h4 id="<%= k %>"><%= v %></h4>
  <% end %>

  <h1>San Francisco (CHANGE TO CURRENT CITY)</h1> 
  <div id="clockbox"></div>

  <select class="form-control options">
    <option>Select City</option>
    <% @cities.each do |city| %>
      <option><%= city %></option>
    <% end %>
  </select>

  <select class="form-control options">
    <option>Select Day of the Week</option>
    <option>Monday</option>
    <option>Tuesday</option>
    <option>Wednesday</option>
    <option>Thursday</option>
    <option>Friday</option>
    <option>Saturday</option>
    <option>Sunday</option>
  </select>

  <select class="form-control options">
    <option>Select Uber Type</option>
    <% @uber_types.each do |uber_type| %>
      <option><%= uber_type %></option>
    <% end %>
  </select>

  <button class="btn btn-default">Get Surge Data</button>

