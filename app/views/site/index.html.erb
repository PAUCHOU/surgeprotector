<div class="col-md-3 left-side">

  <% flash.each do |k, v| %>
    <h4 id="<%= k %>"><%= v %></h4>
  <% end %>

  <h1>San Francisco (CHANGE TO CURRENT CITY)</h1> 
  <div id="clockbox"></div>

  <form action="/search" method="post" id="get-surge">
    <input type="hidden" name="search[city]", class="form-control" id="city-form-field">

    <select class="form-control options" id="city">
      <option>Select City</option>
      <% @cities.each do |city| %>
        <option><%= city %></option>
      <% end %>
    </select>

    <input type="hidden" name="search[day]", class="form-control" id="day-form-field">

    <select class="form-control options" id="day">
      <option>Select Day of the Week</option>
      <option>Monday</option>
      <option>Tuesday</option>
      <option>Wednesday</option>
      <option>Thursday</option>
      <option>Friday</option>
      <option>Saturday</option>
      <option>Sunday</option>
    </select>

    <input type="hidden" name="search[uber_type]", class="form-control" id="uber-form-field">

    <select class="form-control options" id="uber-type">
      <option>Select Uber Type</option>
      <% @uber_types.each do |uber_type| %>
        <option><%= uber_type %></option>
      <% end %>
    </select>

    <%= token_tag form_authenticity_token %>
    <input type="submit" value: "Get Surge Data", class="btn btn-default">

  </form>
  
</div>

<div class="col-md-9 center">
  <canvas id="myChart" width="800" height="400"></canvas>
</div>