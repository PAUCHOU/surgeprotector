<div class="col-md-2"></div>
<div class="col-md-8 center">
  <h1>Site Index</h1>

  <form action="/search" method="post">
    <div class="form-group">
      <input type="text" name="city", class="form-control", placeholder="City" autofocus>
    </div>
    <div class="form-group">
      <input type="text" name="day", class="form-control", placeholder="Day of Week" >
    </div>
    <div class="form-group">
      <input type="text" name="uber_type", class="form-control", placeholder="Uber Type" >
    </div>

    <%= token_tag form_authenticity_token %>

    <input type="submit" value: "Get Surge Data", class="btn btn-default">
</form>

<div class="col-md-2"></div>