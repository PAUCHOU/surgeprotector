<div class="col-md-2"></div>

<div class="col-md-8 center profile">
  <div class="profile-form">
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>

    <% flash.each do |k, v| %>
      <h4 id="<%= k %>"><%= v %></h4>
    <% end %>

    <div class="row profile-row" >
    
      <div class="col-sm-4" >
        <%= button_to "Add a New Place", new_place_path(@user.id), method: :get, class: "btn btn-default" %>
        <span class="glyphicon glyphicon-globe right-margin"></span>
        <span class="glyphicon glyphicon-picture right-margin"></span>
        <span class="glyphicon glyphicon-map-marker"></span>
      </div>

      <div class="col-sm-4">
        <% if @price_queries.length < 1 %>
          <h3>No Saved Places Yet</h3>
        <% else %>
          <h3 class="underline">Saved Places</h3>
          <div id="saved-places">
            <% @price_queries.each do |query| %>
              <h4><a href="/users/<%= @user.id %>/places/<%= query.id %>"> "<%= query.nickname %>," <%= query.city %></a></h4>
          <% end %>
          </div>
        <% end %>
      </div>

      <div class="col-sm-4" >
        <%= button_to "Edit Profile", edit_user_path(@user.id), method: :get, class: "btn btn-primary" %>
        <%= button_to "Delete Profile", user_path(@user.id), method: :delete, class: "btn btn-danger" %>
      </div>

    </div>

  </div>
</div>
<div class="col-md-2"></div>