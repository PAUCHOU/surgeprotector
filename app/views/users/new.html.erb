<div class="col-xs-12 col-sm-6 col-sm-3-offset col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 signup">
	<h2 id="signup-h2">Create an Account</h2>
	<div class="signup-form">
						
		<% flash.each do |k, v| %>
		  <h4 id="<%= k %>"><%= v %></h4>
		<% end %>

		<%= render partial: "form", locals: {user: @user} %>

		<a href="/login">Already a member? Log in &raquo;</a>
	</div>
</div>		
<div class="col-xs-0 col-sm-1 col-md-2"></div>